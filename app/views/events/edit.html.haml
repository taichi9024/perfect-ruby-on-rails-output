- now = Time.zone.now

%h1 イベント情報

= form_with(model:@event, url: :event) do |f|
  #errors 
  .form-group
    = f.label:name
    = f.text_area:name, class:"form-control"
  .form-group
    = f.label:place
    = f.text_area:place, class:"form-control"
  .form-group
    = f.label:start_date
    %div
      = f.datetime_select :start_date, start_year:now.year, end_at:now.year+ 1
  .form-group
    = f.label :end_at
    %div
      = f.datetime_select :end_at, start_year:now.year, end_at:now.year+ 1
  .form-group
    = f.label:content
    = f.text_area:content, class:"form-control", row:10, column:10
  = f.submit class:"btn btn-primary"